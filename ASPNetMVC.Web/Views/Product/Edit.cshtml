@model ASPNetMVC.Web.Entities.Product
<h2>Edit product</h2>

<div class="container">
    <div class="row">
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form method="post">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label>
                            Name
                        </label>
                        <input type="text" name="name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label>
                            Quantity
                        </label>
                        <input type="text" name="quantity" value="@Model.Quantity" />

                    </div>
                    <div class="form-group">
                        <label>
                            Description
                        </label>
                        <input type="text" name="description" value="@Model.Description" />

                    </div>
                    <div class="form-group">
                        <label>
                            Color
                        </label>
                        <input type="text" name="color" value="@Model.Color" />

                    </div>
                    <div class="form-group">
                        <label>
                            Unit Price
                        </label>
                        <input type="text" name="unitprice" value="@Model.UnitPrice" />

                    </div>
                    <div class="form-group">
                        <label>
                            Category
                        </label>
                        <div>
                            @Html.DropDownListFor(m => m.SelectedCategoryId, Model.Categories, "Select a Category", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" />
                    </div>
            </form>

        </div>
    </div>
</div>

